#!/bin/sh
### BEGIN INIT INFO
# Provides:        comp-scorer
# Required-Start:  $local_fs $network $named $time $syslog
# Required-Stop:   $local_fs $network $named $time $syslog
# Default-Start:   2 3 4 5
# Default-Stop:    0 1 6
# Description:     Competition scoring service
### END INIT INFO

RUNAS=<%= @user %>
PIDFILE=/var/run/comp-scorer.pid

start() {
    if [ -f $PIDFILE ] && kill -0 $(cat $PIDFILE); then
        echo 'Competition scorer already running' >&2
        return 1
    fi
    echo 'Starting scorer' >&2
    cd <%= @root %>/srcomp-scorer
    gunicorn -c /etc/comp-api-wsgi -b '[::1]:<%= @port_scorer %>' -p $PIDFILE -u $RUNAS -D app:app
    echo 'Started!' >&2
}

stop() {
    if [ ! -f $PIDFILE ] || ! kill -0 $(cat $PIDFILE); then
        echo 'Competition scorer not running' >&2
        return 1
    fi
    echo 'Stopping scorer...' >&2
    kill -TERM $(cat $PIDFILE) && rm -f $PIDFILE
    echo 'Stopped.' >&2
}

status() {
    if [ -f $PIDFILE ]; then
        if kill -0 $(cat $PIDFILE); then
            echo 'Scorer is active.' >&2
            return 0
        else
            echo 'Scorer is a zombie.' >&2
            return 1
        fi
    else
        echo 'Scorer is not active.' >&2
        return 3
    fi
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  status)
    status
    ;;
  restart)
    stop
    start
    ;;
  force-reload)
    stop
    start
    ;;
  *)
    echo "Usage: $0 (start|stop|restart|status|force-reload)"
esac

